<div class="container">

  <div>
    <h2 style="color:steelblue">Order Confirmation</h2> 
  </div>


  <div>
    <h4><%= current_user.name %></h4>
    <h5><%= current_user.email %></h5>

    <% @ordered_items.each do |item| %>
      <div class="col-sm-2 col-lg-2 col-md-2" style="margin-top:20px, clear:both">
        Product Name: <%= item.product.name %>
      </div>
      <div class="col-sm-10 col-lg-10 col-md-10">
        Quantity <%= item.quantity %>
      </div>
    <% end %>
  </div>

  <p><a href='/products'>Back to main page</a></p>
  
</div>