<h1>Edit Product</h1>
<%= form_tag "/products/#{@product.id}", method: :patch do %>
  <div class="form-group">
    <%= label_tag :name %>
    <%= text_field_tag :name , @product.name , class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :price %>
    <%= text_field_tag :price, @product.price, class: 'form-control' %>
  </div>
  <% @product.images.each do |image| %>
    <div class="form-group">
      <%= label_tag :image %>
      <div><%= image_tag image.image_file %> </div>
      <%= text_field_tag :image , image.image_file , class: 'form-control' %>
    </div>
  <% end %>
  <div class="form-group">
    <%= label_tag :description %>
    <%= text_field_tag :description , @product.description, class: 'form-control' %>
  </div>
  <%= submit_tag "Update product", class: "btn btn-primary" %>  
<% end %>
