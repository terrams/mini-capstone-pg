<h1>New Product</h1>
<%= form_tag '/products', method: :post do %>
  <div class="form-group">
    <%= label_tag :category %>
    <%= text_field_tag :category,"", class: 'form-control' %>
  <div>
  <div class="form-group">
    <%= label_tag :name %>
    <%= text_field_tag :name ,"", class: 'form-control' %>
  <div>
  <div class="form-group">
    <%= label_tag :price %>
    <%= text_field_tag :price,"", class: 'form-control' %>
  <div>
  <div class="form-group">
    <%= label_tag :image %>
    <%= text_field_tag :image ,"", class: 'form-control' %>
  <div>
  <div class="form-group">
    <%= label_tag :description %>
    <%= text_field_tag :description ,"", class: 'form-control' %>
  <div>
  <div>
    <p><%= submit_tag "Add product", class: "btn btn-primary" %> </p>
  </div> 
<% end %>