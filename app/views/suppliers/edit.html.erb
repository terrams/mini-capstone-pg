<h1>Edit Product</h1>
<%= form_tag "/suppliers/#{@supplier.id}", method: :patch do %>
  <div class="form-group">
    <%= label_tag :name %>
    <%= text_field_tag :name , @supplier.name , class: 'form-control' %>
  <div>
  <div class="form-group">
    <%= label_tag :email %>
    <%= text_field_tag :email, @supplier.email, class: 'form-control' %>
  <div>
  <div class="form-group">
    <%= label_tag :phone %>
    <%= text_field_tag :phone , @supplier.phone, class: 'form-control' %>
  <div style="margin-top: 40px">
  <%= submit_tag "Update supplier", class: "btn btn-primary" %>  
<% end %>
